{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@aurora/tsl-kit/*": ["packages/tsl-kit/src/*"],
      "@aurora/tsl-kit": ["packages/tsl-kit/src/index.ts"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist"]
}

